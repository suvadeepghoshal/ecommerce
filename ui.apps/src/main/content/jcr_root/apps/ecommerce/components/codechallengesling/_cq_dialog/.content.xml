<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Code Challenge Sling"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[aemgeeks.components.author.editor]">
    <content
        granite:class="cmp-author_editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <name
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Full Name"
                        name="./name"/>
                    <gender
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="{Boolean}false"
                        fieldDescription="simple true or false."
                        name="./gender"
                        text="Boy or Girl"
                        uncheckedValue="{Boolean}false"
                        value="{Boolean}true"/>
                    <well
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/well"
                        fieldLabel="Books">
                        <items jcr:primaryType="nt:unstructured">
                            <books
                                granite:class="geeks-multifield"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}false"
                                fieldLabel="Favourite Books"
                                validation="geeks-multifield">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    name="./books"/>
                            </books>
                        </items>
                    </well>
                    <select
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="select movie genre"
                        fieldLabel="Book Genre"
                        name="./selectit">
                        <items jcr:primaryType="nt:unstructured">
                            <horror
                                jcr:primaryType="nt:unstructured"
                                text="Horror"
                                value="Horror"/>
                            <thriller
                                jcr:primaryType="nt:unstructured"
                                text="thriller"
                                value="thriller"/>
                            <comedy
                                jcr:primaryType="nt:unstructured"
                                text="comedy"
                                value="comedy"/>
                            <sitcom
                                jcr:primaryType="nt:unstructured"
                                text="sitcom"
                                value="sitcom"/>
                            <fiction
                                jcr:primaryType="nt:unstructured"
                                text="fiction"
                                value="fiction"/>
                        </items>
                    </select>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
